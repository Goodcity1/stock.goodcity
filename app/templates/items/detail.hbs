<section class="main-section item_details_screen">
  <div class="search">
    <div class="row profile_container">
      {{#if (is-equal backLinkPath 'orders.detail')}}
        {{#link-to 'orders.detail' model.designation tagName='span' href=false class="back_link no-avatar"}}
          <i class="fa fa-chevron-left" aria-hidden="true"></i>
        {{/link-to}}
      {{else}}
        {{#link-to backLinkPath tagName='span' href=false class="back_link no-avatar"}}
          <i class="fa fa-chevron-left" aria-hidden="true"></i>
        {{/link-to}}
      {{/if}}
      <div id="itemImage">
        {{image-zoom item=model}}
      </div>
      <div class="image-action-list">
        <span class="no-avatar">
          <i class="fa fa-map-marker" aria-hidden="true"></i>
        </span>

        {{#unless allDispatched}}
          {{#link-to 'items.search_order' model.id (query-params isSet=model.isSet) tagName='span' href=false}}
            <span class="no-avatar">
              <i class="fa fa-shopping-basket" aria-hidden="true"></i>
            </span>
          {{/link-to}}
        {{/unless}}

        <span class="no-avatar">
          <i class="fa fa-print" aria-hidden="true"></i>
        </span>
      </div>
    </div>

    {{#if model.isSet}}
      <div class="row set_details">
        <div class="columns small-12">
          <div class='set_name'>{{model.setItem.description}}</div>
          <div class='set_type'>{{model.code.name}}</div>
        </div>
      </div>
    {{/if}}

    {{#if model.isSet}}
      {{#each model.setItem.items as |item|}}
        {{partial 'items/item_detail_block'}}
      {{/each}}
    {{else}}
      {{partial 'items/item_detail_block'}}
    {{/if}}

  </div>

  {{partial "items/sticky_footer"}}
</section>
