<section class="main-section item_details_screen">
  <div class="search">
    <div class="row profile_container">

      {{#link-to 'items.index' tagName='span' href=false class="back_link"}}
        <i class="fa fa-angle-left" aria-hidden="true"></i>
      {{/link-to}}

      {{#if model.imageUrl}}
        <div style={{previewImageBgCss}} class="profile"></div>
      {{else}}
        <div class="no_image">
          <i class="fa fa-camera" aria-hidden="true"></i>
          No image available.
        </div>
      {{/if}}

      <div class="image-action-list">
        <span class="no-avatar">
          <i class="fa fa-map-marker" aria-hidden="true"></i>
        </span>

        <span class="no-avatar">
          <i class="fa fa-shopping-basket" aria-hidden="true"></i>
        </span>

        <span class="no-avatar">
          <i class="fa fa-print" aria-hidden="true"></i>
        </span>
      </div>
    </div>

    {{partial "items/item_status_bar"}}

    <div class="row detail-section">
      <div class="columns small-9">
        <div class="row">
          <div class="columns small-4">Quanity </div>
          <div class="columns small-8 value"> {{model.quantity}} </div>
        </div>
        <div class="row">
          <div class="columns small-4">Type </div>
          <div class="columns small-8 value"> {{model.code.name}} </div>
        </div>

      </div>
      <div class="columns small-3">
        <img src={{model.thumbImageUrl}} class="thumb"/>
      </div>
    </div>

    <div class="row detail-section">
      <div class="columns small-11">
        <div class="row">
          <div class="columns small-3">Description </div>
          <div class="columns small-9 value description"> {{model.notes}} </div>
        </div>
      </div>
      <div class="columns small-1 item_options_component">
        {{item-options-list item=model}}
      </div>
    </div>

    <div class="row detail-section">
      <div class="columns small-12">

        <div class="row">
          <div class="columns small-3">Size (cm) </div>
          <div class="columns small-3 value">
            L: {{model.length}}
            <span><i class="fa fa-times" aria-hidden="true"></i></span>
          </div>

          <div class="columns small-3 value">
            W: {{model.width}}
            <span><i class="fa fa-times" aria-hidden="true"></i></span>
          </div>

          <div class="columns small-3 value"> H: {{model.height}} </div>
        </div>
        <div class="row">
          <div class="columns small-3">Quality: </div>
          <div class="columns small-3 value">Grade {{model.grade}}</div>
          <div class="columns small-6 value">Condition {{model.donorCondition.name}}</div>
        </div>
        <div class="row">
          <div class="columns small-3">Donation#</div>
          <div class="columns small-9 value"> CAS-49928 </div>
        </div>

      </div>

    </div>
  </div>

  {{partial "items/sticky_footer"}}
</section>
