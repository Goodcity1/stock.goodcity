{{partial "items/item_status_bar"}}

    <div class="row detail-section">
      <div class="columns small-9">
        <div class="row">
          <div class="columns small-4">Quantity </div>
          <div class="columns small-8 value">
            {{item.quantity}}
          </div>
        </div>
        <div class="row">
          <div class="columns small-4">Type </div>
          <div class="columns small-8 value"> {{item.code.name}} </div>
        </div>

      </div>
      <div class="columns small-3">
        {{#link-to 'items.edit_images' item}}
          <img src={{item.thumbImageUrl}} class="thumb"/>
        {{/link-to}}
      </div>
    </div>

    <div class="row detail-section">
      <div class="columns small-11">
        <div class="row">
          <div class="columns small-3">Description </div>
          <div class="columns small-9 value description">
            {{item.notes}}
          </div>
        </div>
      </div>
      <div class="columns small-1 item_options_component">
        {{item-options-list item=item}}
      </div>
    </div>

    <div class="row detail-section">
      <div class="columns small-12">

        <div class="row">
          <div class="columns small-3">Size (cm) </div>
          <div class="columns small-3 value">
            L: {{numeric-inline-input id=(concat 'qty' item.id) name="length" class="numeric-input item-length small-3" value=item.length maxlength="5" pattern="[1-9][0-9]{0,4}" item=item}}
            <span><i class="fa fa-times" aria-hidden="true"></i></span>
          </div>

          <div class="columns small-3 value">
            W: {{numeric-inline-input id=(concat 'wth' item.id) name="width" class="numeric-input item-width small-3" value=item.width maxlength="5"  pattern="[1-9][0-9]{0,4}" item=item}}
            <span><i class="fa fa-times" aria-hidden="true"></i></span>
          </div>

          <div class="columns small-3 value">
            H: {{numeric-inline-input id=(concat 'hgt' item.id) name="height" class="numeric-input item-height small-3" value=item.height maxlength="5" pattern="[1-9][0-9]{0,4}" item=item}}
          </div>
        </div>
        <div class="row">
          <div class="columns small-3">Quality: </div>
          <div class="columns small-3 value quality">
            <div class="select-quality">
              <span class='input_text'>Grade :</span>
              {{inline-select-list
                on-change=(action (mut selectedReason))
                selectedValue=itemGrade
                name="grade"
                item=item
                selectArrow=true}}
            </div>
          </div>
          <div class="columns small-6 value">Condition {{item.donorCondition.name}}</div>
        </div>
        <div class="row">
          <div class="columns small-3">Donation#</div>
          <div class="columns small-9 value"> {{item.caseNumber}} </div>
          {{!--
          <div class="{{if isMobileApp 'small-7 large-8' 'small-9'}} columns donation-field">
            {{text-inline-input id=(concat 'cas' item.id) name="case_number" type="text" class="inline-input donation-input" value=item.caseNumber pattern="(CAS\-\d{5})" item=item displayScanner=displayScanner}}
            <div class='donation-input-error'>Must be in the form "CAS-12345"</div>
          </div>
          {{#if displayScanner}}
            <div class="small-2 large-1 columns scan-icon donation-scanner">
              {{barcode-scanner route="items.detail" paramName="caseNumber"}}
            </div>
          {{/if}}
          --}}
        </div>

      </div>

    </div>
