<nav class="tab-bar new-item-nav">
  <section class="tab-bar-section">
    <h1 class="title">Add - Dining Table</h1>
  </section>
</nav>

<section class="main-section new-item-section ui">
  <div class="row">
    <div class="small-12 columns">

      <div class="row">
        <div class="small-3 columns item-label">
          Quantity
        </div>
        <div class="small-6 large-7 columns left">
          {{input type='text'}}
        </div>
      </div>

      <div class="row">
        <div class="small-3 columns item-label">
          Type
        </div>
        <div class="small-6 large-7 columns left">
          {{input type='text'}}
        </div>
      </div>
    </div>

    <span class="image-box">
      <i class="fa fa-camera" aria-hidden="true"></i>
      Add Images
    </span>
  </div>

  <div class="row">
    <div class="small-3 columns item-label">
      Description
    </div>
    <div class="small-9 columns">
      {{input type='text'}}
    </div>
  </div>

  <div class="row dimension-row">
    <div class="small-3 columns item-label">
      Size (cm)
    </div>
    <div class="columns small-3 value length">
      <span class='input_text'>L :</span>
      {{input type='text' }}
      <span><i class="fa fa-times" aria-hidden="true"></i></span>
    </div>

    <div class="columns small-3 value">
      <span class='input_text'>W :</span>
      {{input type='text' }}
      <span><i class="fa fa-times" aria-hidden="true"></i></span>
    </div>

    <div class="columns small-3 value height">
      <span class='input_text'>H :</span>
      {{input type='text' }}
    </div>
  </div>

  <div class="row quality-row">
    <div class="small-3 columns item-label">
      Quality
    </div>
    <div class="small-4 columns">
      <span class='input_text'>Grade :</span>
      {{input type='text' classNames='grade'}}
    </div>
    <div class="small-5 columns">
      {{input type='text'}}
    </div>

  </div>

  <div class="row">
    <div class="small-3 columns item-label">
      Donation#
    </div>
    <div class="small-7 large-8 columns">
      {{input type='text'}}
    </div>
    <div class="small-2 large-1 columns scan-icon">
      <i class="fa fa-barcode" aria-hidden="true"></i>
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns item-label">
      Location
    </div>
    <div class="small-7 large-8 columns">
      {{input type='text'}}
    </div>
    <div class="small-2 large-1 columns scan-icon">
      <i class="fa fa-barcode" aria-hidden="true"></i>
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns item-label">
      Inventory#
    </div>
    <div class="small-7 large-8 columns inventory-number">
      {{model.inventoryNumber}}
    </div>
    <div class="small-2 large-1 columns scan-icon">
      <i class="fa fa-print" aria-hidden="true"></i>
    </div>
  </div>

  <div class="row">
    <div class="small-6 columns">
      {{#link-to 'items' classNames="button secondary expand"}}Cancel{{/link-to}}
    </div>

    <div class="small-6 columns">
      <a href="#" class="button expand">Save</a>
    </div>
  </div>
</section>
