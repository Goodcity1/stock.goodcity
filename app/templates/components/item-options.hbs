<div class="options-link-open {{if hidden '' 'hidden'}}" {{action "toggle" false}}>
  <i class="fa fa-angle-left"></i>
</div>

<div class="receive-options {{if hidden 'hidden'}}">
  <div class="disabled">
    <i class="fa item-menu fa-pencil-square-o"></i>
    {{t "item.edit"}}
  </div>

  {{dispatch-form item=item order=order closeList=(action 'toggle' true) }}

  {{undesignate-item item=item order=order closeList=(action 'toggle' true) }}

  <div class="options-link-close" {{action "toggle" true}}>
    <i class="fa item-menu fa-angle-right"></i>
  </div>
</div>
