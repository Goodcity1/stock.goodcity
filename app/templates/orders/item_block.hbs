<div class="row item_block">
  <div class="row dispatch_details {{if item.sentOn 'dispatched'}}">
    <div class="small-4 columns">
      {{#if item.sentOn}}
        <i class="fa fa-ship"></i> {{item.designation.code}}
      {{else if item.designation}}
        <i class="fa fa-shopping-basket"></i> {{item.designation.code}}
      {{else}}
        <i class="fa fa-eye" aria-hidden="true"></i> In Stock
      {{/if}}
    </div>
    <div class="small-3 columns">
      {{#unless item.sentOn}}
        <i class="fa fa-map-marker"></i> {{item.location.name}}
      {{/unless}}
    </div>
    <div class="small-5 columns">
      <i class="fa fa-tag"></i> {{item.inventoryNumber}}
    </div>
  </div>

  <div class="row other_details">
    <div class="small-3 large-2 columns image">
      <img src="assets/images/default_item.jpg" class="thumb cl-item-image">
    </div>
    <div class="small-9 large-10 columns name_details">
      <div class="ellipsis name one-line-ellipsis">{{item.quantity}} x {{item.code.name}}</div>
      <div class="ellipsis two-line-ellipsis">
        {{item.notes}}
      </div>
    </div>
  </div>
</div>
