<div class="row item_block">
  <div class="row dispatch_details {{if item.sentOn 'dispatched'}}">
    <div class="small-4 columns">
      <i class="fa fa-shopping-basket"></i> {{model.code}}
    </div>
    <div class="small-3 columns">
      {{#unless item.sentOn}}
        <i class="fa fa-map-marker"></i> 20-348
      {{/unless}}
    </div>
    <div class="small-5 columns">
      <i class="fa fa-tag"></i> {{item.inventoryNumber}}
    </div>
  </div>

  <div class="row">
    <div class="small-3 large-2 columns image">
      <img src="assets/images/default_item.jpg" class="thumb cl-item-image">
    </div>
    <div class="small-9 large-10 columns name_details">
      <div class="name">{{item.quantity}} x {{item.description}}</div>
      <div class="">
        Black, wooden ikea bookshelf.
        Modular design
      </div>
    </div>
  </div>
</div>
