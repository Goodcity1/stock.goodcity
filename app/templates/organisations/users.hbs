{{partial 'organisations/nav_bar'}}

<section class="main-section">
  {{partial 'organisations/organisation_tabs'}}

  <section class="main-section">
    <div class="row add_user_button">
      <div class=" {{if isMobileApp 'small-9' 'small-12'}} columns">
        {{#link-to "users.new" model.id class="button expand"}}Add User to Organisation {{/link-to}}
      </div>
    </div>
  </section>

  <div class="row">
    <section class="main-section">
      <div class="row search">
        <ul class="list list-activity">
          {{#each allOrganisationsUsers as |OrganisationsUser|}}
            <li>
              <div class="row state_details">
                <div class="small-12 columns">
                  First Name: {{OrganisationsUser.user.firstName}}
                </div>
              </div>
              <div class="row state_details">
                <div class="small-12 columns">
                  Last Name: {{OrganisationsUser.user.lastName}}
                </div>
              </div>
              <div class="row state_details">
                <div class="small-12 columns">
                  Mobile: {{OrganisationsUser.user.mobile}}
                </div>
              </div>
            </li>
          {{/each}}
        </ul>
      </div>
    </section>
  </div>
</section>
